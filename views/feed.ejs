<% include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class="card w-32 ">
                <div class=" w-32 h-40 bg-zinc-700 rounded-lg overflow-hidden ">
                    <img class="w-full h-full object-cover" src="<%= elem.image %>" alt="">
                </div>
                <h3 class="mt-2 text-md "><%= elem.title %></h3>
                <h5 class=" mt-2 text-sm opacity-60">@<%= (elem.user?.username || 'Unknown').trim() %></h5> 
            </div>
       <% }) %>
    </div>
   </div>
<% include ./partials/footer.ejs%>